{
  "name": "storyhub",
  "private": true,
  "description": "",
  "version": "1.3.0",
  "author": "RedQ, Inc",
  "devDependencies": {
    "husky": "^1.1.4",
    "lerna": "^3.13.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.3",
    "tslint": "^5.13.0",
    "tslint-react": "^3.6.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "develop": "cd packages/agency-blog && gatsby develop",
    "build": "cd packages/agency-blog && yarn && gatsby build && mv public ../..",
    "serve": "cd packages/agency-blog && gatsby serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
